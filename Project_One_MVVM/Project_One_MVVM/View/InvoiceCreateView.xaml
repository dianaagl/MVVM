        xmlns:local="clr-namespace:Project_One_MVVM.View"
        mc:Ignorable="d"
        Title="InvoiceCreateView" Height="450" Width="800">
    <Grid Margin="0,0,0,23">
        <ComboBox x:Name="customer" Margin="0,106,591,248">

        </ComboBox>
        <ComboBox x:Name="Employee" Margin="0,31,591,318">

        </ComboBox>
        <ComboBox x:Name="Product" Margin="0,167,591,196">

        </ComboBox>
        <Label Margin="226,128,503,230" Content="Count" RenderTransformOrigin="0.5,0.5"/>
        <TextBox x:Name="Count" Margin="206,171,483,196" RenderTransformOrigin="0.291,1.176">


        </TextBox>
        <Button Margin="591,167,0,196" Content="Add product"  Command="{Binding AddProduct}"></Button>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="90" Margin="314,167,0,0" VerticalAlignment="Top" Width="272"/>
